#!/usr/bin/bash
benchmark=$1
cwd=${PWD}

trap 'cd "$cwd"' EXIT

if [ "$benchmark" = "spion" ]; then
    cd "$cwd/benchmark/async-compare"
    npm install
    node performance.js --n 10000 --t 1 ./dev-bluebird/*.js --harmony
    exit 0
elif [ "$benchmark" = "cujojs" ]; then
    cd "$cwd/benchmark"
    node cujojs.js
    exit 0
else
    echo "Invalid benchmark name $benchmark"
    exit -1
fi
